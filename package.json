{
  "private": true,
  "name": "mumemo",
  "version": "0.3.0",
  "license": "MIT",
  "main": "./dist/main/main.js",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\""
  },
  "build": {
    "productName": "mumemo",
    "appId": "info.efcl.mumemo",
    "asar": true,
    "npmRebuild": false
  },
  "electronWebpack": {
    "whiteListedModules": [
      "codemirror",
      "hypermd"
    ]
  },
  "dependencies": {
    "@jxa/run": "^1.3.2",
    "active-win": "^6.1.0",
    "codemirror": "^5.53.2",
    "dayjs": "^1.8.26",
    "electron-log": "^4.1.2",
    "electron-positioner": "^4.1.0",
    "electron-store": "^5.1.1",
    "execa": "^4.0.0",
    "flatbush": "^3.3.0",
    "gfm-escape": "^0.1.8",
    "hypermd": "^0.3.11",
    "jimp": "^0.10.3",
    "markdown-escapes": "^1.0.4",
    "minimist": "^1.2.5",
    "opencv-wasm": "^4.3.0-0.3.0",
    "pureimage": "^0.2.1",
    "sanitize-filename": "^1.6.3",
    "shortid": "^2.2.15",
    "source-map-support": "^0.5.19",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@jxa/types": "^1.3.1",
    "@types/codemirror": "^0.0.91",
    "@types/flatbush": "^3.1.0",
    "@types/jimp": "^0.2.28",
    "@types/minimist": "^1.2.0",
    "@types/node": "12",
    "@types/shortid": "^0.0.29",
    "@types/tmp": "^0.1.0",
    "electron": "7.2.4",
    "electron-builder": "^22.4.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "electron-window-state": "^5.0.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.0",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3",
    "webpack": "~4.42.1"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
